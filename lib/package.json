{
  "name": "e-prim",
  "description": "A set of tools to implement a design system on top of @emotion/css and @emotion/react as well as add some primitive components to make prototyping UI faster and easier",
  "version": "2.0.1",
  "author": "Daniel Stoyanoff <dannystoyanoff@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "homepage": "https://dstoyanoff.github.io/e-prim",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "dev": "yarn --cwd ./docs dev",
    "example": "yarn --cwd ./example install && yarn --cwd ./example dev",
    "build": "tsup",
    "test": "jest",
    "bundlewatch": "bundlewatch --config .bundlewatch.config.js",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "peerDependencies": {
    "@emotion/react": ">11",
    "react": ">19"
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@babel/preset-env": "7.28.5",
    "@babel/preset-react": "7.28.5",
    "@babel/preset-typescript": "7.28.5",
    "@emotion/babel-preset-css-prop": "11.12.0",
    "@emotion/jest": "11.13.0",
    "@emotion/react": "11.14.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.3",
    "babel-jest": "29.7.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "mock-match-media": "^0.4.2",
    "ts-jest": "^29.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dstoyanoff/emotion-primitive.git"
  }
}